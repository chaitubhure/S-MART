<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chaitanya.barcodescanner.Main2Activity"
    android:background="@drawable/logo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAYMENT OPTIONS"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="34sp"
        android:textStyle="normal|bold"
        android:textColor="@color/zxing_encode_view" />

    <Button
        android:text="patym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:onClick="onClick"
        android:elevation="0dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="freecharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b6"
        android:onClick="onClick"
        android:layout_below="@+id/b5"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/b6"
        android:layout_alignParentStart="true">

        <Button
            android:text="BHIM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b7"
            android:onClick="onClick"/>

        <Button
            android:text="icici Credit card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b8"
            android:onClick="onClick"/>

        <Button
            android:text="icici debit card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b9"
            android:onClick="onClick"/>

        <Button
            android:text="icici net banking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b10"
            android:onClick="onClick"/>

        <Button
            android:text="browse other items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/webview"
            android:onClick="onClick" />

        <Button
            android:text="rcity floor plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcity"
            android:onClick="onClick" />
    </LinearLayout>

</RelativeLayout>
